{
  "manifest_version": 3,
  "name": "Cloud Document Converter",
  "description": "Convert lark cloud documents to markdown",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "permissions": ["contextMenus", "scripting"],
  "host_permissions": [
    "https://*.feishu.cn/*",
    "https://*.feishu.net/*",
    "https://*.larksuite.com/*",
    "https://*.feishu-pre.net/*",
    "https://*.larkoffice.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.feishu.cn/*",
        "https://*.feishu.net/*",
        "https://*.larksuite.com/*",
        "https://*.feishu-pre.net/*",
        "https://*.larkoffice.com/*"
      ],
      "js": ["bundles/content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "bundles/background.js",
    "scripts": ["bundles/background.js"],
    "type": "module"
  },
  "default_locale": "en",
  "browser_specific_settings": {
    "gecko": {
      "id": "lark-docs-conv@aoki.app",
      "strict_min_version": "120.0"
    }
  }
}
